@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="banner-bottom py-5">
    <div class="container py-5">
        <div class="text-center icon" style="display: inline-flex;padding-left: 20px">
            <a href="/customer/index?customerId=@ViewBag.customerId" class="btn btn-success">Back</a> 
        </div>

        <input type="text" class="form-control" placeholder="Enter Order Id" id="txtOrderid" /><br/>
        <input type="button" id="btn-submit" class="btn btn-success" value="Submit" />
        <br />
        <div id="record-detail">
            <h3> Order Detail</h3>
            <table>
                <thead>
                <tr>
                    <th>Product</th>
                    <th>Order Id</th>
                    <th>Amount</th>
                    <th>Payment-Method</th>
                    <th>Order-Status</th>
                    <th>Order-Date</th>
                </tr>
                </thead>
                <tbody id="orderBody">
                </tbody>
            </table>
        </div>
        <div id="no-record" style="display: none">
            <h3> No record found</h3>

        </div>

    </div>

</section>

<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }
    /* Zebra striping */
    tr:nth-of-type(odd) {
        background: #eee;
    }

    th {
        background: #333;
        color: white;
        font-weight: bold;
    }

    td, th {
        padding: 6px;
        border: 1px solid #ccc;
        text-align: left;
    }

    @@media only screen and (max-width: 760px), (min-device-width: 768px) and (max-device-width: 1024px) {
        /* Force table to not be like tables anymore */
        table, thead, tbody, th, td, tr {
            display: block;
        }
            /* Hide table headers (but not display: none;, for accessibility) */
            thead tr {
                position: absolute;
                top: -9999px;
                left: -9999px;
            }

        tr {
            border: 1px solid #ccc;
        }

        td {
            /* Behave  like a "row" */
            border: none;
            border-bottom: 1px solid #eee;
            position: relative;
            padding-left: 50%;
        }

            td:before {
                /* Now like a table header */
                position: absolute;
                /* Top/left values mimic padding */
                top: 6px;
                left: 6px;
                width: 45%;
                padding-right: 10px;
                white-space: nowrap;
            }
            /*
    Label the data
    */
            td:nth-of-type(1):before {
                content: "Product";
            }

            td:nth-of-type(2):before {
                content: "Order Id";
            }

            td:nth-of-type(3):before {
                content: "Amount";
            }

            td:nth-of-type(4):before {
                content: "Payment-Method";
            }

            td:nth-of-type(5):before {
                content: "Order-Status";
            }

            td:nth-of-type(6):before {
                content: "Order-Date";
            }

            td:nth-of-type(7):before {
                content: "Secret Alias";
            }

            td:nth-of-type(7):before {
                content: "Date of Birth";
            }

            td:nth-of-type(8):before {
                content: "Dream Vacation City";
            }

            td:nth-of-type(9):before {
                content: "GPA";
            }

            td:nth-of-type(10):before {
                content: "Arbitrary Data";
            }
    }
</style>

@section scripts{
    <script type="text/javascript">
        $("#btn-submit").click(function () {
            var orderId = $("#txtOrderid").val();
            var body = "";
            $.ajax({
                type: "GET",
                url: "/Customer/GetOrders?orderId=" + orderId,
                data: '{}',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                    $.each(response,
                        function (index, value) {
                            body += "<tr><td>" +
                                value.product +
                                "</td>" +
                                "<td>" +
                                value.orderId +
                                "</td>" +
                                "<td>" +
                                value.total +
                                "</td>" +
                                "<td>" +
                                value.paymentType +
                                "</td>" +
                                "<td>" +
                                value.orderStatusType +
                                "</td>" +
                                "<td>" +
                                value.orderDate +
                                "</td></tr>";
                        });
                    if (body != "") {
                        $("#orderBody").html(body);
                        $("#no-record").hide();
                        $("#record-detail").show();


                    } else {
                        $("#no-record").show();
                        $("#record-detail").hide();

                    }
                },
                failure: function (response) {
                    alert(response);
                },
                error: function (response) {
                    alert(response);
                }
            });
        });

    </script>
}


