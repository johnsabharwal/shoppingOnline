<script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap.min.js"></script>
<script src="~/js/jquery.validate.js"></script>
<script src="~/js/jquery.validate.unobtrusive.js"></script>
<script src="~/js/jquery.toaster.js"></script>

<script>
    $(document).ready(function() {
        var toasterMessage = '@TempData["ToasterMessage"]';
        var toasterLevel = '@TempData["ToasterLevel"]';
        if (toasterMessage != '' && toasterMessage != undefined) {
            $.toaster({ priority: toasterLevel, title: 'Notice', message: toasterMessage });

        }
        var isLogin = '@TempData["isLogin"]';
        if (isLogin=="1") {
            localStorage.setItem("cid","@TempData["cid"]");
            localStorage.setItem("companyname","@TempData["companyname"]");
        }
        var companyname = localStorage.getItem("companyname");
        var cid = localStorage.getItem("cid");
        $("#dashboadrLink").attr("href", "/company/CompanyDashboard?companyid=" + cid);
        if (companyname != null && companyname != "") {
            $("#txtname").text(companyname);
            $("#signOutCompany").hide();
            $("#signInCompany").show();
        } else {
            $("#signInCompany").hide();
            $("#signOutCompany").show();
        }
        $("#logout").click(function () {
            localStorage.removeItem("companyname");
            localStorage.removeItem("cid");
            location.href = "/";
        });
    });
</script>
