@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
</div>
<section class="banner-bottom py-5">
    <div class="container">
        <div class="content-grid">
            <div class="text-center icon">
                <span class="fa fa-unlock-alt"></span>
            </div>
            <div class="content-bottom">
                <form action="/Account/UserLogin" method="post">
                    <div class="field-group">

                        <div class="content-input-field">
                            <input name="emailId" type="text" placeholder="Email id" required="">
                        </div>
                    </div>
                    <div class="field-group">
                        <div class="content-input-field">
                            <input name="password" type="Password" placeholder="Password" required="">
                        </div>
                    </div>
                    <div class="content-input-field">
                        <button type="submit" class="btn">Sign In</button>
                    </div>
                    <ul class="list-login">
                        <li class="switch-slide">
                            <label class="switch">
                                <input type="checkbox">
                                <span class="slider round"></span>
                                keep Logged in
                            </label>
                        </li>
                        <li>
                            <button type="button" data-toggle="modal" data-target="#forgetPassword" class="text-right btn btn-info btn-lg">Forgot password?</button>
                        </li>
                        <li class="clearfix"></li>
                    </ul>
                    <ul class="list-login-bottom">
                        <li class="">
                            <a href="/account/register" class="">Don't have an Account?</a>
                        </li>
                        <li class="clearfix"></li>
                    </ul>
                </form>
            </div>
        </div>
    </div>
</section>
<partial name="_ForgotPassword" />

@section scripts
{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.toaster.js"></script>

    <script>
        $(document).ready(function () {
            var type= '@TempData["isAdded"]';
            if (type == '1' ) {
            $.toaster({ priority: "success", title: 'Notice', message: "Password sent successfully.Please check your email."});

            }
            if (type == '0' ) {
                $.toaster({ priority: "danger", title: 'Notice', message: "user not found"});

            }
            $("#isCustomer").val("true");
        });
    </script>
}