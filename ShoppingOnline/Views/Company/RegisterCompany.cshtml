@model CreateCompanyVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
</div>
<section class="banner-bottom py-5">
    <div class="container">
        <div class="content-grid">
            <div class="text-center icon">
                <span class="fa fa-user-circle-o"></span>
            </div>
            <div class="content-bottom">
                <form action="/company/create" method="post">
                    <div class="field-group">

                        <div class="content-input-field">
                            <input asp-for="@Model.CompanyName" type="text" value="" placeholder="Company Name" required="">
                        </div>
                    </div>
                    <div class="field-group">

                        <div class="content-input-field">
                            <input asp-for="@Model.Address" type="text" value="" placeholder="Company Address" required="">
                        </div>
                    </div>
                    <div class="field-group">

                        <div class="content-input-field">
                            <input asp-for="@Model.UserName" type="text" value="" placeholder="Username" required="">
                        </div>
                    </div>
                    <div class="field-group">
                        <div class="content-input-field">
                            <input asp-for="@Model.Name" type="text" placeholder="Your Name">
                        </div>
                    </div>
                    <div class="field-group">
                        <div class="content-input-field">
                            <input asp-for="@Model.EmailId" type="email" placeholder="Email Address">
                        </div>
                    </div>
                    <div class="field-group">
                        <div class="content-input-field">
                            <input asp-for="@Model.Password" type="password" placeholder="Password">
                        </div>
                    </div>
                    <div class="field-group">
                        <div class="content-input-field">
                            <input asp-for="@Model.Contact" type="text" id="txtnumber" placeholder="Contact Number">
                        </div>
                    </div>
                    <div class="field-group">

                        <div class="content-input-field" style="display: inline-flex">
                            <label style="min-width: 50%">Country </label>       <select id="country" class="form-control" style="min-width: 200px" asp-for="@Model.CountryId" asp-items="@Model.CountryList"></select>
                        </div>
                    </div>
                    <br />
                    <div class="field-group">
                        <div class="content-input-field" style="display: inline-flex">
                            <label style="min-width: 43%">Business  Type    </label>     <select id="BussinessType" style="min-width: 200px" class="form-control" asp-for="@Model.BusinessTypeId" asp-items="@Model.BusinessTypeList"></select>
                        </div>
                    </div>
                    <div class="content-input-field">
                        <button type="submit" class="btn">Sign Up</button>
                    </div>
                    <div class="list-login-bottom text-center mt-lg-5 mt-4">

                        <a href="#" class="">By clicking Signup, I agree to your terms</a>



                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<style>
    .main-sec {
        min-height: auto !important;
    }
</style>
@section scripts{
    <script>
        $(document).ready(function() {
            $("#txtnumber").on("keypress keyup blur",function (event) {    
                $(this).val($(this).val().replace(/[^\d].+/, ""));
                if ((event.which < 48 || event.which > 57)) {
                    event.preventDefault();
                }
            });
        });
    </script>
}